
@{
    ViewBag.Title = "Roller";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using System.Web.Security;
@model List<string>


<div class="col-md-12">
    <div class="block">
        <div class="block-heading">
            <div class="main-text h2">
                <a href="/Role/Ekle" class="btn btn-primary rounded" role="button">Yeni Rol Ekle</a>
            </div>
            <div class="block-controls">
                <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
            </div>
        </div>
        <div class="block-content-outer">
            <div class="block-content-inner">
                <div class="table-responsive">

                    <table id="datatable-1" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Rol Adı</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (string rol in Model)
                            {
                                <tr>
                                    <td>@rol</td>
                                    <td><a href="#" class="btn btn-danger" data-roladi="@rol">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>





